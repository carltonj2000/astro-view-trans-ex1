---
const { src, alt, active } = Astro.props;
---

<div class="flex flex-col @lg:flex-row">
  <div class="@lg:w-1/2 bg-gray-800 p-1">
    <img
      class="rounded-t-lg @lg:rounded-none @lg:rounded-l-lg object-contain w-[300px] h-[300px]"
      src={`/pics/${src}.jpg`}
      alt={alt}
    />
  </div>
  <div
    class="bg-gray-800 text-white @lg:w-1/2 p-2 @lg:p-5 border-2 border-gray-900 rounded-b-lg @lg:rounded-bl-none @lg:rounded-r-lg"
  >
    <slot />
  </div>
</div>
